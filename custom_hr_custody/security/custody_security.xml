<?xml version="1.0" ?>
<odoo>
    <record id="hr_rule_custody_user" model="ir.rule">
        <field name="name">Custody user role</field>
        <field name="model_id" ref="model_hr_custody"/>
        <!-- <field name="groups" eval="[(4,ref('hr.group_hr_user'))]"/> -->
        <field name="perm_read" eval = "1"/>
        <field name="perm_write" eval = "1"/>
        <field name="perm_create" eval = "1"/>
        <field name="perm_unlink" eval = "1"/>
        <field name="domain_force">[('employee.user_id','=',user.id)]</field>
    </record>
    <record id="hr_rule_custody_manager" model="ir.rule">
        <field name="name">Custody manager role</field>
        <field name="model_id" ref="model_hr_custody"/>
        <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
        <field name="perm_read" eval = "1"/>
        <field name="perm_write" eval = "1"/>
        <field name="perm_create" eval = "1"/>
        <field name="perm_unlink" eval = "1"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
