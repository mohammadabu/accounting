<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model='ir.ui.view' id='custody_item_form_view'>
            <field name="name">custody.item.form</field>
            <field name="model">hr.custody.items</field>
            <field name="arch" type="xml">
                <form string="Items">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="products" />
                                <field name="quantity" />
                                <field name="required_quantity" />
                            </group>
                            <group>
                                <field name="custody_quantity" />
                                <field name="amount_remaining" />
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>        
        <record id="custody_item_tree_view" model="ir.ui.view">
            <field name="name">hr.custody.items.tree</field>
            <field name="model">hr.custody.items</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="products"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_custody_item" model="ir.actions.act_window">
            <field name="name">Custody Items</field>
            <field name="res_model">hr.custody.items</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Create a New Record.
                </p>
            </field>
        </record>

        <menuitem action="action_hr_custody_item" groups="stock.group_stock_manager" id="hr_custody_item_menu" parent="custom_hr_custody.hr_custody_main_menu"
                  name="Custody Items" sequence="2"/>     
    </data>
</odoo>
