<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_project_info">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="padding-bottom:50px !important;" class="oe_structure"/>
                        <h2 align="center">TimeSheet Report by Employees</h2>
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <th>Project Number</th>
                                    <th>Project Name</th>
                                    <!-- <th >Project Stage</th> -->
                                    <th >Associated Opportunity Value</th>
                                </tr>
                                <tr t-foreach="project_info" t-as="t">
                                    <td style='width="25%"'><span t-esc="t['name_seq']"/></td>
                                    <td style='width="25%"'><span t-esc="t['name']"/></td>
                                    <td style='width="25%"'><span t-esc="t['parent_opportunity']"/></td>
                                    <td style='width="25%"'><span t-esc="t['stage']"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>