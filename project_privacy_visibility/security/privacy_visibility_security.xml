<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_public_members_rule_for_department" model="ir.rule">
        <field name="name">Project: employees: following required for department-only projects</field>
        <field name="model_id" ref="model_project_project" />
        <field name="global" eval="True"/>
        <field name="domain_force">
            ['&amp;',('privacy_visibility','=','department'),('hide_product_id','=','no')]
        </field>
    </record>


    <record id="project_task_public_members_rule_for_department" model="ir.rule">
        <field name="name">user_project_task_users_only_tasks</field>
        <field name="model_id" ref="project.model_project_task" />
        <!-- <field name="groups" eval="[(4,ref('project.group_project_user'))]"/> -->
        <field name="global" eval="True"/>
        <field name="perm_read" eval = "1"/>
        <field name="perm_write" eval = "1"/>
        <field name="perm_create" eval = "1"/>
        <field name="perm_unlink" eval = "1"/>
        <field name="domain_force">
            ['&amp;',('project_id.privacy_visibility','=','department'),('project_id.hide_product_id','=','no')]
        </field>
    </record>


</odoo> 
 

  

   