<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_public_members_rule_for_department" model="ir.rule">
        <field name="name">Project: employees: following required for department-only projects</field>
        <field name="model_id" ref="model_project_project" />
        <!-- <field name="global" eval="True"/> -->
        <field name="groups" eval="[(4,ref('project.group_project_user'))]"/>
        <field name="perm_read" eval = "1"/>
        <field name="perm_write" eval = "1"/>
        <field name="perm_create" eval = "0"/>
        <field name="perm_unlink" eval = "0"/>
        <field name="domain_force">
            [('user_emails','like',"#"+str(user.id)+"#")] 
        </field>  
    </record> 
    <record id="project_public_admin_rule_for_department" model="ir.rule">
