<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_project_custom_privacy_visibility_view" model="ir.ui.view">
        <field name="name">custom.project.custom.privacy.visibility.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='privacy_visibility']" position="after">
                <field name="user_department" />
                <field name="department" domain="[('parent_id', 'child_of', [user_department])]" attrs="{'invisible': [('privacy_visibility', '!=', 'department')],'required': [('privacy_visibility', '=', 'department')]}"/>
                <field name="user_emails"/>
            </xpath>
        </field>
    </record>


    <record id="custom_edit_project_view_modal" model="ir.ui.view">
        <field name="name">Custom Edit Project Modal</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="privacy_visibility" widget="radio"/>
                <field name="user_department"/>
                <field name="department" domain="[('parent_id', 'child_of', [user_department])]" attrs="{'invisible': [('privacy_visibility', '!=', 'department')],'required': [('privacy_visibility', '=', 'department')]}"/>
            </xpath>
        </field>
    </record>  
</odoo>