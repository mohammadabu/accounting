<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_inventory_master_tree_view" model="ir.ui.view">
            <field name="name">import.inventory.master.tree.view</field>
            <field name="model">import.inventory.master</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="filename"/>
                    <field name="cron_id"/>
                    <field name="user_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="import_inventory_master_form_view" model="ir.ui.view">
            <field name="name">import.inventory.master.form.view</field>
            <field name="model">import.inventory.master</field>
            <field name="arch" type="xml">
                <form create="false" import="false" edit="false">
                    <group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="status"/>
                            <field name="cron_id"/>
                            <field name="operation"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!--Action-->
        <record id="action_import_inventory_master" model="ir.actions.act_window">
            <field name="name">Imported Inventory Status</field>
            <field name="res_model">import.inventory.master</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Inventory Import Status" action="action_import_inventory_master" id="menu_import_inventory_master"
                  sequence="101"
                  parent="stock.menu_stock_root"/>

    </data>
</odoo>
